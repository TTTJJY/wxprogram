.area__body {
  margin-top: 20rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 0 15rpx rgba(184, 197, 204, 0.1);
}

.area__items {
  position: relative;
  display: flex;
  display: -webkit-flex;
  justify-content: flex-start;
  height: 108rpx;
  line-height: 108rpx;
  padding: 0 40rpx;
  overflow: hidden;
}

.area__items::after {
  content: "";
  position: absolute;
  left: 40rpx;
  bottom: 0;
  width: calc(100% + 40rpx);
  height: 2rpx;
  background-color: #e5e5e5;
}

.area__items:last-child::after {
  height: 0;
}

.area__items-textarea {
  position: relative;
  display: flex;
  display: -webkit-flex;
  justify-content: flex-start;
  padding: 0 40rpx;
  overflow: hidden;
}

.area__input {
  font-size: 32rpx;
  color: #313233;
  align-self: center;
  text-align: left;
  flex: 1 1 auto;
  margin-right: 30rpx;
}

.area__textarea {
  font-size: 32rpx;
  color: #313233;
  line-height: 48rpx;
  text-align: left;
  height: 320rpx;
  flex: 1 1 auto;
  margin-top: 32rpx;
  margin-bottom: 40rpx;
}

.submit-btn {
  margin-top: 32rpx;
  border-radius: 16rpx;
  background-color: #1ea0fa !important;
  box-shadow: 0 8rpx 24rpx rgba(30, 123, 250, 0.3);
}