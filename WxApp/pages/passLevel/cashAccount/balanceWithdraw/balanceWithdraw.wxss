/* pages/passLevel/cashAccount/myAccount/myAccount.wxss */

page {
  background-color: #edf0f5;
}

.account__wrap {
  position: relative;
}

.account__nav {
  position: relative;
  top: -2rpx;
  width: 100%;
  height: 260rpx;
  background-image: url("http://cgstatic.wjx.cn/images/account/bg@1x.png");
  background-size: cover;
}

.account__panel {
  position: absolute;
  top: 40rpx;
  left: 20rpx;
  right: 20rpx;
  height: 665rpx;
  background-color: #fff;
  background-repeat: no-repeat;
  background-position: center bottom;
  background-size: 710rpx 124rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 16rpx rgba(62, 141, 255, 0.4);
}

.panel__head {
  position: relative;
  background-color: #f7faff;
  border-radius: 16rpx 16rpx 0 0;
  text-align: center;
  padding: 42rpx 0 50rpx;
}

.my__title {
  font-size: 28rpx;
  color: #979ba8;
}

.my__balance {
  font-size: 44rpx;
  color: #5c5e66;
  font-weight: bold;
  line-height: 100%;
  margin-top: 12rpx;
}

.balance-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.income-expenses-details {
  position: absolute;
  top: 45rpx;
  right: 60rpx;
  font-size: 24rpx;
  color: #979ba8;
  width: 140rpx;
  height: 44rpx;
  line-height: 44rpx;
  border: 2rpx solid #d5d7e2;
  border-radius: 22rpx;
}

.panel__body {
  padding: 0 60rpx;
}

.amount-title {
  display: block;
  font-size: 28rpx;
  color: #000;
  margin-top: 30rpx;
  margin-bottom: 5rpx;
}

.amount__input {
  display: flex;
  display: -webkit-flex;
  text-align: left;
  border-bottom: 2rpx solid #e5e5e5;
}

.symbol {
  font-size: 60rpx;
  font-weight: bold;
}

.showWithDraw {
  font-size: 70rpx;
  font-weight: bold;
  flex: 1 1 auto;
  height: 104rpx;
  min-height: 104rpx;
}

.enter {
  flex: 1 1 auto;
  height: 104rpx;
  min-height: 104rpx;
  font-size: 70rpx;
  font-weight: bold;
}

.all {
  flex: 0 0 auto;
  font-size: 28rpx;
  color: #1ea0fa;
  line-height: 104rpx;
}

.amount__prompt {
  font-size: 24rpx;
  line-height: 40rpx;
  color: #a7acc2;
  margin: 24rpx 0;
}

.submit-btn {
  border-radius: 18rpx;
}
