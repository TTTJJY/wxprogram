page {
  height: 100%;
  min-height: 100%;
}

.details-body {
  box-sizing: border-box;
  background-color: #fff;
  padding-bottom: 130rpx;
}

.details-empty-body {
  box-sizing: border-box;
  height: 100%;
  min-height: 100%;
  background-color: #fff;
  padding-bottom: 130rpx;
  overflow: hiddenï¼›
}

.details-items {
  overflow: hidden;
  padding: 0 40rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.items-name, .items-time {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}

.items-name {
  margin: 24rpx 0 10rpx;
}

.items-time {
  margin-bottom: 24rpx;
}

.tx-title {
  font-size: 32rpx;
  color: #000;
}

.tx-answer {
  font-size: 28rpx;
  color: #1ea0fa;
}

.tx-status {
  font-size: 24rpx;
  color: #a1a5b3;
}

.tx-date {
  font-size: 24rpx;
  color: #b8bccc;
}

.details-empty {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  background-color: #fff;
  border-radius: 8rpx;
  height: 100%;
}

.empty-box {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.null-icon {
  width: 156rpx;
  height: 136rpx;
  background-image: url("http://cgstatic.wjx.cn/images/account/null-icon@1x.png");
  background-repeat: no-repeat;
  background-size: 156rpx 136rpx;
}

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .null-icon {
    background-image: url("http://cgstatic.wjx.cn/images/account/null-icon@2x.png");
  }
}

.empty-word {
  font-size: 28rpx;
  color: #b8bccc;
  margin-top: 25rpx;
}
