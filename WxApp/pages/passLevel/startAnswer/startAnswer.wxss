/* pages/passLevel/StartAnswer/StartAnswer.wxss */

page {
  height: 100%;
  min-height: 100%;
  background-color: #99d5ff;
}

.page__body {
  position: relative;
  min-height: 100%;
  overflow: hidden;
  padding-bottom: 192rpx;
  box-sizing: border-box;
}

.pass__answer-box {
  margin-top: 120rpx;
  padding: 0 32rpx;
}

.checkInMode__head {
  position: relative;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 52rpx 0 44rpx;
  border: 4rpx solid #0f2733;
  background-color: #cfefff;
  border-radius: 20rpx 20rpx 0 0;
}

.decoration-icon {
  width: 58px;
  height: 33px;
  background-image: url("http://cgstatic.wjx.cn/images/decoration@1x.png");
  background-repeat: no-repeat;
  background-size: 58px 33px;
}

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .decoration-icon {
    background-image: url("http://cgstatic.wjx.cn/images/decoration@2x.png");
  }
}

.schedule-wrap {
  font-size: 16px;
  color: #0f2733;
  font-weight: bold;
}

.schedule-wrap view {
  float: left;
  margin-left: 10rpx;
}

.schedule {
  display: inline-block;
  color: #0091ff;
}

.wjxCountDown__wrap {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: -80rpx;
  left: 50%;
  margin-left: -84rpx;
  z-index: 1;
  text-align: center;
}

.wjxCountDown__wrap::before {
  content: "";
  display: block;
  position: absolute;
  top: -12rpx;
  left: -8rpx;
  width: 184rpx;
  height: 84rpx;
  background-image: url("http://cgstatic.wjx.cn/images/fan@1x.png");
  background-repeat: no-repeat;
  background-size: 184rpx 84rpx;
}

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .wjxCountDown__wrap::before {
    background-image: url("http://cgstatic.wjx.cn/images/fan@2x.png");
  }
}

/* time scroll Start*/

.round {
  width: 168rpx;
  height: 168rpx;
  background-color: blue;
  border-radius: 84rpx;
  position: absolute;
}

.round1 {
  clip: rect(0rpx, 168rpx, 168rpx, 84rpx);
  transform: rotate(0deg);
  background-color: #fff;
}

.round2 {
  clip: rect(0rpx, 84rpx, 168rpx, 0rpx);
  transform: rotate(0deg);
  background-color: #fff;
}

.countDown__hold {
  width: 168rpx;
  height: 168rpx;
  position: absolute;
  z-index: 1;
}

.countDown__bg {
  width: 168rpx;
  height: 168rpx;
  border-radius: 168rpx;
  position: absolute;
  background-color: rgba(0, 145, 255, 1);
}

.countDown__time {
  width: 124rpx;
  height: 124rpx;
  margin: 19.5rpx 0 0 19.5rpx;
  background-color: rgba(254, 246, 30, 1);
  border-radius: 124rpx;
  position: absolute;
  z-index: 1;
  text-align: center;
  line-height: 124rpx;
  font-weight: bold;
  border: 4rpx solid rgba(15, 39, 51, 1);
}

.countDown__time--num {
  font-size: 44rpx;
  color: rgba(255, 0, 0, 1);
  margin-top: 28rpx;
  line-height: 1;
}

.countDown__time--unit {
  font-size: 20rpx;
  line-height: 1;
  margin-top: 8rpx;
}

.CountDown__frame {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 168rpx;
  height: 168rpx;
  border-radius: 168rpx;
  border: 4rpx solid rgba(15, 39, 51, 1);
  box-sizing: border-box;
}

.pass__question {
  position: relative;
  z-index: 1;
  padding: 20rpx 40rpx 50rpx;
  border: 4rpx solid #0f2733;
  background-color: #fff;
  border-top: none;
  border-radius: 0 0 20rpx 20rpx;
}

.field-label {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0 20rpx 0;
  word-wrap: break-word;
  overflow: hidden;
}

.ui-controlgroup .ui-radio {
  display: flex;
  display: -webkit-flex;
  margin-top: 20rpx;
  border: 2rpx solid #d5d5d5;
  border-radius: 10rpx;
  padding: 20rpx;
}

.ui-controlgroup .ui-radio view {
  align-self: center;
}

.ui-controlgroup .ui-radio icon {
  margin-top: 6rpx;
  margin-right: 10rpx;
}

.ui-controlgroup .ui-word {
  font-size: 32rpx;
}

.show {
  display: block !important;
}

.hide {
  display: none !important;
}
