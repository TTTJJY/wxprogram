}

.edit-bar-box .icon-set {
  background-image: url(http://cgstatic.wjx.cn/images/set-b@1x.png);
}

.edit-bar-box .icon-add {
  background-image: url(http://cgstatic.wjx.cn/images/my-recruit@1x.png);
}

.edit-bar-box .icon-preview {
  background-image: url(http://cgstatic.wjx.cn/images/preview@1x.png);
}

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .edit-bar-box .icon-set {
    background-image: url(http://cgstatic.wjx.cn/images/set-b@2x.png);
  }

  .edit-bar-box .icon-add {
