@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .ui-control-group .ui-radio::before {
    background-image: url(http://cgstatic.wjx.cn/images/icon-radio@2x.png);
  }

  .ui-control-group .ui-radio.ui-default::before {
    background-image: url(http://cgstatic.wjx.cn/images/icon-radio-b@2x.png);
  }
}

@media (-webkit-min-device-pixel-ratio: 3), (min-resolution: 458dpi) {
  .ui-control-group .ui-radio::before {
    background-image: url(http://cgstatic.wjx.cn/images/icon-radio@3x.png);
  }

  .ui-control-group .ui-radio.ui-default::before {
    background-image: url(http://cgstatic.wjx.cn/images/icon-radio-b@3x.png);
  }
}

.ui-control-group .ui-label:last-child {
  margin-bottom: 0;
}

.ui-group-box {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 24rpx;
  border-radius: 4rpx;
  border: 2rpx solid #ccc;
}

.edit__menu {
  display: none;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.edit__tool {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  padding: 0 40rpx;
  background-color: #fafbff;
  border-top: 2rpx solid #e5e5e5;
}

.edit__tool .icon {
  width: 25%;
  height: 120rpx;
  align-self: center;
}

.edit__tool .icon-editbg {
  background-repeat: no-repeat;
  background-size: 40rpx 40rpx;
  background-position: center;
  background-image: url(http://cgstatic.wjx.cn/images/editor@1x.png);
}

.edit__tool .icon-upbg {
  background-repeat: no-repeat;
  background-size: 40rpx 40rpx;
  background-position: center;
  background-image: url(http://cgstatic.wjx.cn/images/move-up@1x.png);
}

.edit__tool .icon-downbg {
  background-repeat: no-repeat;
  background-size: 40rpx 40rpx;
  background-position: center;
  background-image: url(http://cgstatic.wjx.cn/images/move-down@1x.png);
}

.edit__tool .icon-delbg {
  background-repeat: no-repeat;
  background-size: 40rpx 40rpx;
  background-position: center;
  background-image: url(http://cgstatic.wjx.cn/images/delete@1x.png);
}

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .edit__tool .icon-editbg {
    background-image: url(http://cgstatic.wjx.cn/images/editor@2x.png);
  }

  .edit__tool .icon-upbg {
    background-image: url(http://cgstatic.wjx.cn/images/move-up@2x.png);
  }

  .edit__tool .icon-downbg {
    background-image: url(http://cgstatic.wjx.cn/images/move-down@2x.png);
  }

  .edit__tool .icon-delbg {
    background-image: url(http://cgstatic.wjx.cn/images/delete@2x.png);
  }
}

/* 添加新题 Start */

.edit__add-box {
  position: relative;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.edit-items::after {
  content: "";
  position: absolute;
  top: 28rpx;
  bottom: 28rpx;
  left: 100%;
  width: 1rpx;
  background-color: #e6e6e6;
  transform: translateX(-50%);
}

.edit-items {
  position: relative;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  flex-direction: column;
  flex: 1 1 auto;
  width: 33.3333%;
  height: 150rpx;
}

.topic-icon {
  width: 44rpx;
  height: 44rpx;
  align-self: center;
  background-repeat: no-repeat;
  background-size: 44rpx 44rpx;
  background-position: center;
  background-image: url(http://cgstatic.wjx.cn/images/add@1x.png);
}

.ocr-icon {
  width: 44rpx;
  height: 44rpx;
  align-self: center;
  background-repeat: no-repeat;
  background-size: 44rpx 44rpx;
  background-position: center;
  background-image: url(http://cgstatic.wjx.cn/images/scanning@1x.png);
}

.bankTopic-icon {
  width: 44rpx;
  height: 44rpx;
  align-self: center;
  background-repeat: no-repeat;
  background-size: 44rpx 44rpx;
  background-position: center;
  background-image: url(http://cgstatic.wjx.cn/images/question-bank@1x.png);
}

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .topic-icon {
    background-image: url(http://cgstatic.wjx.cn/images/add@2x.png);
  }

  .ocr-icon {
    background-image: url(http://cgstatic.wjx.cn/images/scanning@2x.png);
  }

  .bankTopic-icon {
    background-image: url(http://cgstatic.wjx.cn/images/question-bank@2x.png);
  }
}

.edit-word {
  align-self: center;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #5c5e66;
  text-align: center;
}

