/* pages/passLevel/editQue/editQue.wxss */

page {
  padding-bottom: 160rpx;
  background-color: #eceef8;
}

.edit__list-box {
  position: relative;
  overflow: hidden;
}

.edit__list-wrap {
  margin-top: 20rpx;
  background-color: #fff;
}

.edit__list-body {
  padding: 52rpx 40rpx;
}

.edit__list-wrap .edit__desc {
  display: block;
  width: 100%;
  font-size: 36rpx;
  color: #313233;
  line-height: 40rpx;
  margin-bottom: 24rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.edit__desc-tit {
  display: block;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #939699;
  margin-top: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.must {
  color: #f00;
  margin-left: 10rpx;
}

.ui-control-group {
  font-size: 28rpx;
  color: #313233;
  line-height: 28rpx;
}

.ui-control-group .ui-label {
  position: relative;
  padding-left: 40rpx;
  line-height: 40rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.ui-control-group .ui-radio::before {
  content: "";
  position: absolute;
  top: 8rpx;
  left: 0;
  width: 24rpx;
  height: 24rpx;
  background-image: url(http://cgstatic.wjx.cn/images/icon-radio@1x.png);
  background-position: 0 0;
  background-size: 24rpx 24rpx;
}

