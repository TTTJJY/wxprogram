page {
  /* height: 100%; */
  background-color: #edf0f5;
}

.zone-wrap {
  position: relative;
  /* height: 100%; */
  padding-bottom: 160rpx;
}

.zone-nav {
  position: absolute;
  top: -2rpx;
  z-index: -1;
  width: 100%;
  height: 262rpx;
  background-image: url("http://cgstatic.wjx.cn/images/zone/experience-bg@1x.png");
  background-size: cover;
}

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .zone-nav {
    background-image: url("http://cgstatic.wjx.cn/images/zone/experience-bg@2x.png");
  }
}

.zone-empty-box {
  height: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-word {
  font-size: 28rpx;
  color: #b8bccc;
  margin-top: 10rpx;
}

.line-word {
  text-decoration: underline;
}

.null-icon {
  width: 156rpx;
  height: 136rpx;
  margin-bottom: 10rpx;
  background-image: url("http://cgstatic.wjx.cn/images/account/null-icon@1x.png");
  background-repeat: no-repeat;
  background-size: 156rpx 136rpx;
}

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .null-icon {
    background-image: url("http://cgstatic.wjx.cn/images/account/null-icon@2x.png");
  }
}

.zone-container {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  /* height: 100%; */
  padding: 0 30rpx;
}

.zone-tit {
  font-size: 54rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.zone-group {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}

.zone-group-items {
  flex: 1 1 auto;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 40rpx;
  box-shadow: 0 8rpx 9rpx rgba(62, 141, 255, 0.3);
}

.items-body {
  max-width: 60%;
}

.items-box {
  position: relative;
}

.items-tit {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  line-height: 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.red-icon {
  position: absolute;
  top: 12rpx;
  right: -40rpx;
  width: 32rpx;
  height: 32rpx;
}

.fire-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 6rpx;
  align-self: center;
}

.people {
  font-size: 28rpx;
  color: #a1a5b3;
  display: flex;
  display: -webkit-flex;
  margin-top: 10rpx;
}

.join-btn {
  align-self: center;
  width: 120rpx;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 28rpx;
  color: #1ea0fa;
  border-radius: 8rpx;
  border: 2rpx solid #1ea0fa;
  text-align: center;
  margin-left: 80rpx;
}

.fixed-slider {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx;
  padding: 0 30rpx;
  background-color: #fff;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
}

.start-btn {
  align-self: center;
  flex: 1 1 auto;
  height: 86rpx;
  line-height: 86rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  border-radius: 16rpx;
  background-color: #1ea0fa;
}

.unsubscribe-box {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 150rpx;
  font-size: 26rpx;
  color: #000;
  text-align: center;
}

.unsubscribe-link {
  color: #1ea0fa;
  text-decoration: underline;
}
